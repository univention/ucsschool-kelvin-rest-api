#!/bin/sh
#

OU=$1
DNOLD=$2
DNNEW=$3

if [ -z "$OU" -o -z "$DNOLD" -o -z "$DNNEW" ] ; then
  echo "at least one dn is missing"
  echo "$0 <ou> <olddn> <newdn>"
  exit 1
fi

eval `univention-config-registry shell`

FQDNOLD="$(ldapsearch -LLL -x -b "$DNOLD" uid | grep ^uid | sed -re 's|uid: ||' -e 's|\$$||').$domainname"
FQDNNEW="$(ldapsearch -LLL -x -b "$DNNEW" uid | grep ^uid | sed -re 's|uid: ||' -e 's|\$$||').$domainname"

echo "OU: $OU"
echo "old server fqdn: $FQDNOLD"
echo "new server fqdn: $FQDNNEW"
echo ""
echo "changing file shares"
ldapsearch -LLL -b "ou=$OU,$ldap_base" -x "(&(objectClass=univentionShare)(univentionShareHost=$FQDNOLD))" dn | grep ^dn | sed -re 's|^dn: ||' | while read dn; do
	univention-directory-manager shares/share modify --dn "$dn" --set host="$FQDNNEW"
done

echo ""
echo "changing printer shares"
ldapsearch -LLL -b "ou=$OU,$ldap_base" -x "(&(objectClass=univentionPrinter)(univentionPrinterSpoolHost=$FQDNOLD))" dn | grep ^dn | sed -re 's|^dn: ||' | while read dn; do
	univention-directory-manager shares/printer modify --dn "$dn" --set spoolHost="$FQDNNEW"
done
