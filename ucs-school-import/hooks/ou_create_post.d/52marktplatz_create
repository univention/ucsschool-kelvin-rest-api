[ $# -ne 2 ] && echo "USAGE: $(basename $0) FILE DN" && exit 1

is_ucr_true() {
	local val="$(echo $1 | tr [:upper:] [:lower:])"
	[ "$val" = "yes" -o "$val" = "true" -o "$val" = "1" -o "$val" = "enabled" ]
}

eval "$(ucr shell)"

if ! is_ucr_true "$ucsschool_import_generate_share_marktplatz" ; then
	echo "$(basename $0): creation of share 'Marktplatz' has been disabled by ucsschool/import/generate/marktplatz"
	exit 0
fi

ou="$(awk -F '\t' '{print $1}' "$1" | tr '[:upper:]' '[:lower:]')"
if is_ucr_true "$ucsschool_ldap_district_enable" ; then
	district=",ou=${ou:0:2}"
fi

dcname="$(awk -F '\t' '{print $2}' "$1")"
if [ -z "$dcname" ] ; then
	dcname="dc${ou}-01.${domainname}"
else
	dcname="${dcname}.${domainname}"
fi

sharepath="$ucsschool_import_generate_share_marktplatz_sharepath"
if [ -z "$sharepath" ] ; then
	sharepath="/home/groups/Marktplatz"
fi

sharemode="$ucsschool_import_generate_share_marktplatz_permissions"
if [ -z "$sharemode" ] ; then
	sharemode="0775"
fi

sharegrp="$ucsschool_import_generate_share_marktplatz_group"
if [ -z "$sharegrp" ] ; then
	sharegrp="Domain Users"
fi
grpuidnumber="$(ldapsearch -xLLL "(&(objectclass=univentionGroup)(cn=${sharegrp}))" gidNumber | sed -ne 's/^gidNumber: //p')"

udm shares/share create --ignore_exists \
	--position "cn=shares,ou=${ou}${district},${ldap_base}" \
	--set name=Marktplatz \
	--set "host=${dcname}" \
	--set "path=${sharepath}" \
	--set "directorymode=${sharemode}" \
	--set "group=${grpuidnumber}"

echo "$(basename $0): added new share Markplatz for server ${dcname}"

exit 0
