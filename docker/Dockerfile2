# TODO: set to specific alpine version (>=3.18?) that includes Python 3.11 or migarte to Debian image
ARG DOCKER_PROXY

FROM ${DOCKER_PROXY}alpine:3.18.9

VOLUME /var/log

WORKDIR /kelvin

EXPOSE 7890

ENV PYTHONUNBUFFERED=1
ENV POETRY_NO_INTERACTION=1
ENV POETRY_VIRTUALENVS_CREATE=false
ENV PIPX_BIN_DIR="/usr/local/bin"
ENV VIRTUAL_ENV="/venv"

RUN apk add python3 openjdk17
RUN apk add gcc linux-headers python3-dev musl-dev openldap-dev git py3-pip py3-virtualenv

COPY kelvin-api ./kelvin-api
COPY ucs-school-import ./ucs-school-import
COPY ucs-school-lib ./ucs-school-lib
COPY univention-directory-manager-modules-slim ./univention-directory-manager-modules-slim
COPY univention-lib-slim ./univention-lib-slim
COPY openapi-client-udm-1.0.2.tar.gz /kelvin/

WORKDIR /kelvin/kelvin-api

RUN python3 -m venv $VIRTUAL_ENV
ENV PATH="$VIRTUAL_ENV/bin:$PATH"
RUN pip install pipx
RUN pipx install poetry
RUN poetry install

CMD ["gunicorn" ,"--worker-class", "uvicorn.workers.UvicornWorker", "--bind", "0.0.0.0:8911", "ucsschool.kelvin.main:app"]

ARG app_id
ARG commit
ARG date
ARG version

LABEL "description"="Image of UCS app 'UCS@school Kelvin REST API' ('$app_id')." \
    "url"="https://www.univention.com/products/univention-app-center/app-catalog/$app_id/" \
    "version"="$version" \
    "release date"="$date" \
    "commit"="$commit"
